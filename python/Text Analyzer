                <pre><code># Python-style Text Analyzer
import re
from collections import Counter

class TextAnalyzer:
    def __init__(self, text):
        self.text = text
        self.words = self._extract_words()
    
    def _extract_words(self):
        # Regex to extract words (lowercase)
        words = re.findall(r'\b[a-z]+\b', self.text.lower())
        return words
    
    def word_count(self):
        return len(self.words)
    
    def unique_words(self):
        return len(set(self.words))
    
    def most_common_words(self, n=10):
        word_freq = Counter(self.words)
        return word_freq.most_common(n)
    
    def longest_words(self, n=5):
        unique = list(set(self.words))
        sorted_words = sorted(unique, key=len, reverse=True)
        return sorted_words[:n]</code></pre>
