    <script>
        // TextAnalyzer Class (Python-style OOP in JavaScript)
        class TextAnalyzer {
            constructor(text) {
                this.text = text;
                this.words = this._extractWords();
            }

            _extractWords() {
                // Python regex equivalent: re.findall(r'\b[a-z]+\b', text.lower())
                const words = this.text.toLowerCase().match(/\b[a-z]+\b/g) || [];
                return words;
            }

            wordCount() {
                return this.words.length;
            }

            uniqueWords() {
                return new Set(this.words).size;
            }

            averageWordLength() {
                if (this.words.length === 0) return 0;
                const totalLength = this.words.reduce((sum, word) => sum + word.length, 0);
                return (totalLength / this.words.length).toFixed(2);
            }

            characterCount() {
                return this.text.replace(/\s/g, '').length;
            }

            sentenceCount() {
                const sentences = this.text.split(/[.!?]+/).filter(s => s.trim().length > 0);
                return sentences.length;
            }

            mostCommonWords(n = 10) {
                // Python Counter equivalent
                const frequency = {};
                this.words.forEach(word => {
                    frequency[word] = (frequency[word] || 0) + 1;
                });

                // Sort by frequency (Python's most_common())
                return Object.entries(frequency)
                    .sort((a, b) => b[1] - a[1])
                    .slice(0, n);
            }

            longestWords(n = 5) {
                const unique = [...new Set(this.words)];
                return unique.sort((a, b) => b.length - a.length).slice(0, n);
            }

            getFormattedOutput() {
                let result = "=".repeat(50) + "\n";
                result += "TEXT ANALYSIS RESULTS\n";
                result += "=".repeat(50) + "\n\n";
                result += "üìä Basic Statistics:\n";
                result += `   Total Words: ${this.wordCount()}\n`;
                result += `   Unique Words: ${this.uniqueWords()}\n`;
                result += `   Characters: ${this.characterCount()}\n`;
                result += `   Sentences: ${this.sentenceCount()}\n`;
                result += `   Average Word Length: ${this.averageWordLength()} letters\n\n`;
                
                result += "üî• Most Common Words:\n";
                this.mostCommonWords().forEach(([word, count]) => {
                    result += `   '${word}': ${count} times\n`;
                });
                
                result += "\nüìè Longest Words:\n";
                this.longestWords().forEach(word => {
                    result += `   '${word}' (${word.length} letters)\n`;
                });
                
                result += "\n" + "=".repeat(50);
                return result;
            }

            getVisualOutput() {
                const commonWords = this.mostCommonWords();
                const longestWords = this.longestWords();

                return {
                    stats: {
                        totalWords: this.wordCount(),
                        uniqueWords: this.uniqueWords(),
                        characters: this.characterCount(),
                        sentences: this.sentenceCount(),
                        avgLength: this.averageWordLength()
                    },
                    commonWords,
                    longestWords
                };
            }
        }

        // Event Listener
        document.getElementById('analyzeBtn').addEventListener('click', () => {
            const text = document.getElementById('textInput').value;
            const outputDiv = document.getElementById('output');

            if (!text.trim()) {
                outputDiv.innerHTML = '<p style="color: #e74c3c; text-align: center;">‚ö†Ô∏è Please enter some text to analyze!</p>';
                outputDiv.classList.add('show');
                return;
            }

            // Create analyzer instance
            const analyzer = new TextAnalyzer(text);
            const visual = analyzer.getVisualOutput();

            // Create visual output
            let html = `
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-number">${visual.stats.totalWords}</div>
                        <div class="stat-label">Total Words</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-number">${visual.stats.uniqueWords}</div>
                        <div class="stat-label">Unique Words</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-number">${visual.stats.characters}</div>
                        <div class="stat-label">Characters</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-number">${visual.stats.sentences}</div>
                        <div class="stat-label">Sentences</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-number">${visual.stats.avgLength}</div>
                        <div class="stat-label">Avg Length</div>
                    </div>
                </div>

                <div class="word-cloud">
                    <h3>üî• Most Common Words</h3>
                    ${visual.commonWords.map(([word, count]) => 
                        `<span class="word-item">${word}<span class="word-count">${count}√ó</span></span>`
                    ).join('')}
                </div>

                <div class="word-cloud">
                    <h3>üìè Longest Words</h3>
                    ${visual.longestWords.map(word => 
                        `<span class="word-item">${word}<span class="word-count">${word.length} letters</span></span>`
                    ).join('')}
                </div>
            `;

            outputDiv.innerHTML = html;
            outputDiv.classList.add('show');

            // Scroll to results
            outputDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        });

        // Allow Enter key to analyze
        document.getElementById('textInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && e.ctrlKey) {
                document.getElementById('analyzeBtn').click();
            }
        });
    </script>
